<div class="container">
  <h1 class="container text-center mt-5 mb-5"><%= @list.name %></h1>

    <div class="d-flex justify-content-end mb-5">
    <%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: "btn btn-primary"  %>
      <%= button_to "Delete list",
                            list_path(@list),
                            method: :delete,
                            data: { confirm: "Are you sure?" }, class: "btn btn-danger mx-3" %>
        <%= link_to 'Back', lists_path(@list), class: "btn btn-secondary"  %>

  </div>


  <div class="d-flex justify-content-around">
    <% @bookmarks.each do |bookmark| %>
      <div class="card text-center" style="width: 25rem;">
        <%= image_tag bookmark.movie.poster_url, class:"card-img-top rounded img-thumbnail img" %>
        <div class="card-body">
          <strong><h3><%= bookmark.movie.title %></strong>
           <small><p><%= "⭐#{bookmark.movie.rating.to_i}/10" %></p></h3></small>
          <p><%= bookmark.movie.overview %></p>
          <h4><em>"<%= bookmark.comment %>"</em></h4>
        </div>
      </div>
    <% end %>
  </div>

</div>
